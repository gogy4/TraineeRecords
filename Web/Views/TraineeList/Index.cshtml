@model WebApplication1.Models.TraineeListViewModel

@{
    ViewData["Title"] = "Список стажеров";
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="Filter">
    <div class="row">
        <div class="col-md-4">
            <label for="directionFilter">Направление</label>
            <select id="directionFilter" name="directionFilter" class="form-control">
                <option value="">Все направления</option>
                @foreach (var direction in Model.TraineeResources.Values)
                {
                    <option value="@direction.direction"
                            selected="@(string.Equals(ViewBag.SelectedDirection, direction.direction, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                        @direction.direction
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label for="projectFilter">Проект</label>
            <select id="projectFilter" name="projectFilter" class="form-control">
                <option value="">Все проекты</option>
                @foreach (var project in Model.TraineeResources.Values)
                {
                    <option value="@project.project"
                            selected="@(string.Equals(ViewBag.SelectedProject, project.project, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                        @project.project
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <button type="submit" class="btn btn-primary mt-4">Применить фильтры</button>
        </div>
    </div>
</form>

<hr>

<table class="table table-bordered mt-4">
    <thead>
    <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Направление</th>
        <th>Проект</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Trainees.Any())
    {
        @for (var i = 0; i < Model.Trainees.Count; i++)
        {
            <tr>
                <td>@Model.Trainees[i].Name</td>
                <td>@Model.Trainees[i].Surname</td>
                <td>@Model.TraineeResources[Model.Trainees[i].Id].direction</td>
                <td>@Model.TraineeResources[Model.Trainees[i].Id].project</td>
                <td>
                    <a href="@Url.Action("Index", "TraineeRedactor", new { traineeId = Model.Trainees[i].Id })"
                       class="btn btn-info btn-sm">Подробнее</a>
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">Нет стажеров по выбранным фильтрам</td>
        </tr>
    }
    </tbody>
</table>
