@model WebApplication1.Models.TraineeListViewModel

@{
    ViewData["Title"] = "Список стажеров";
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="Filter">
    <div class="row">
        <div class="col-md-4">
            <label for="directionFilter">Направление</label>
            <select id="directionFilter" name="directionFilter" class="form-control">
                <option value="">Все направления</option>
                @foreach (var direction in Model.Directions)
                {
                    <option value="@direction.Name" selected="@(Context.Request.Query["directionFilter"] == direction.Name ? "selected" : "")">
                        @direction.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label for="projectFilter">Проект</label>
            <select id="projectFilter" name="projectFilter" class="form-control">
                <option value="">Все проекты</option>
                @foreach (var project in Model.Projects)
                {
                    <option value="@project.Name" selected="@(Context.Request.Query["projectFilter"] == project.Name ? "selected" : "")">
                        @project.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <button type="submit" class="btn btn-primary mt-4">Применить фильтры</button>
        </div>
    </div>
</form>

<hr>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainee in Model.Trainees)
        {
            <tr>
                <td>@trainee.Name</td>
                <td>@trainee.Surname</td>
                <td>
                    <a href="#" class="btn btn-info btn-sm">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>
